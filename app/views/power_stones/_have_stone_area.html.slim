- if current_user.have_stone?(power_stone)
  = link_to "所持リストから削除", have_stone_path(current_user.have_stones.find_by(power_stone_id: power_stone.id)), data: { turbo_method: :delete }, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"
- else
  = link_to "所持リストへ追加", have_stones_path(power_stone_id: power_stone.id), data: { turbo_method: :post }, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"